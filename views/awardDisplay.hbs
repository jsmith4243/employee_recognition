<html lang="en">
  <head>
  <title>{{title}}</title>
  
  <link rel ='stylesheet' href='stylesheets/style.css' />
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  
  <script type="text/javascript" src="/js/moment.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/bootstrap-datetimepicker.min.css">
  <script type="text/javascript" src="/js/bootstrap-datetimepicker.min.js"></script>
  </head>


  <body>
  
    <h1>{{title}}</h1>

    <p>Logged in as: {{user}}</p>

    <div class="btn-group" role="group" aria-label="...">
      <a href="/logout"><button type="button" class="btn btn-default">Log Out</button></a>
      <a href="/userSettings"><button type="button" class="btn btn-default">User Settings</button></a>
    </div>
    
    <h2>Create Award:</h2>
    
    <div class="form-group">
      <label for="name">Recipient name:</label>
      <input type="text" class="form-control" name="name">
    </div>
    <div class="form-group">
      <label for="email">Recipient email:</label>
      <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label for="class">Award type:</label>
      <select class="form-control" id="class">
        {{#each classes}}
        <option>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="container">
      <div class="row">
        <div class='col-sm-6'>
          <div class="form-group">
            <div class='input-group date' id='datetimepicker1'>
              <input type='text' class="form-control" />
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
        <script type="text/javascript">
          $(function () {
            $('#datetimepicker1').datetimepicker();
          });
        </script>
      </div>
    </div>


    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default">Create</button>
    </div>
    
    
    <h2> Sent Awards: </h2>
    
    <table>
    {{#each entries}}
    <tr>
    <td>{{this.name}}</td>
    <td>{{this.recipient}}</td>
    <td>{{this.email}}</td>
    <td>{{this.granted}}</td>
    </tr>
    {{/each}}
    </table>
    
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default">Delete</button>

    </div>
    


  </body>
<html>